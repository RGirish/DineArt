<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="#fff"
    android:padding="30dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llPage1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:inputType="numberDecimal"
            android:gravity="center"
            android:padding="3dp"
            android:maxLength="4"
            android:id="@+id/amountGiven"
            android:textSize="16sp"
            android:hint="Amount Given"
            android:background="@drawable/et_bg"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>

        <Button
            android:text="Go"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="2dp"
            android:textColor="#fff"
            android:background="@drawable/selector_login"
            android:id="@+id/goBtn"
            android:layout_marginTop="20dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/llPage2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:padding="3dp"
            android:textSize="18sp"
            android:id="@+id/changeToBeGiven"
            android:textColor="#c444"
            android:text="Change - Rs.258.00"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>

        <Button
            android:text="Payment Successful"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="2dp"
            android:id="@+id/paymentSuccessful"
            android:textColor="#fff"
            android:background="@drawable/selector_login"
            android:layout_marginTop="20dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>