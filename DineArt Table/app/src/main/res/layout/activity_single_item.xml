<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frame"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.nirhart.parallaxscroll.views.ParallaxScrollView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="match_parent"
            app:parallax_factor="1.9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_marginTop="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/thephoto"
                    android:scaleType="centerCrop"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:id="@+id/itemdetails"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/thetitle"
                        android:gravity="center"
                        android:text="Classic Deviled Eggs"
                        android:layout_marginTop="30dp"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:padding="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/theprice"
                        android:gravity="center"
                        android:text="Rs.65"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:padding="5dp"/>

                    <TextView
                        android:textStyle="italic"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_marginTop="30dp"
                        android:text="Ingredients:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textStyle="italic"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:id="@+id/theingredients"
                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="16sp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/thedescription"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="100dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                </FrameLayout>

            </LinearLayout>

        </com.nirhart.parallaxscroll.views.ParallaxScrollView>

        <LinearLayout
            android:background="@android:drawable/dialog_holo_light_frame"
            android:gravity="center"
            android:layout_marginRight="-50dp"
            android:layout_marginLeft="-50dp"
            android:layout_marginTop="-10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="#ff5722"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="19dp"
                android:orientation="horizontal">

                <TextView
                    android:text="Williamsburg Diner"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowColor="#5000"
                    android:textColor="#fff"
                    android:shadowRadius="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


    <LinearLayout
        android:background="@android:drawable/dialog_holo_light_frame"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:rotation="180"
        android:layout_marginRight="-50dp"
        android:layout_marginLeft="-50dp"
        android:layout_marginBottom="-10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:background="@drawable/orange_normal"
            android:id="@+id/myorderllsingleitem"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="13dp"
            android:orientation="horizontal">

            <TextView
                android:text="My Order"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:shadowDx="0"
                android:rotation="180"
                android:shadowDy="2"
                android:shadowColor="#5000"
                android:textColor="#fff"
                android:shadowRadius="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>

</LinearLayout>