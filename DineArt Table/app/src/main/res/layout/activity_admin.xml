<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@android:drawable/dialog_holo_light_frame"
        android:gravity="center"
        android:layout_marginRight="-50dp"
        android:layout_marginLeft="-50dp"
        android:layout_marginTop="-10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:background="#ff5722"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="19dp"
            android:orientation="horizontal">

            <TextView
                android:text="Williamsburg Diner"
                android:textSize="25sp"
                android:textStyle="bold"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowColor="#5000"
                android:textColor="#fff"
                android:shadowRadius="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="SYNC NEW ITEMS"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="2dp"
            android:textColor="#fff"
            android:background="@drawable/selector_login"
            android:onClick="onClickSyncNewItems"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <Button
            android:text="SYNC EVERYTHING"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="2dp"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_login"
            android:onClick="onClickSyncEverything"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <Button
            android:text="SET TABLE NUMBER"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="2dp"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_login"
            android:onClick="onClickSetTableNumber"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />



    </LinearLayout>

</LinearLayout>